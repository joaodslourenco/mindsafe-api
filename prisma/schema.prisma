// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id        String      @id @default(uuid())
  email     String      @unique
  name      String
  role      String
  createdAt DateTime    @default(now())
  posts     Post[]
  Therapist Therapist[]

  @@map("user")
}

model Therapist {
  id        String  @id @default(uuid())
  email     String  @unique
  name      String
  patients  Patient @relation(fields: [patientId], references: [id])
  patientId String
}

model Post {
  id        String   @unique @default(uuid())
  content   String
  createdAt DateTime @default(now())
  user      Patient? @relation(fields: [userId], references: [id])
  userId    String?
}
